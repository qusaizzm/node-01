<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/room.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

            <main>
                <% if (sto.length> 0) { %>
                    <div class="grid">
                        <% for (let room of sto) { %>
                            <article class="card proddk-item">
                                <header class="card__header">
                                    <h1 class="proddk__title">
                                        <%= room.roomNO %>
                                    </h1>
                                </header>
                                <div class="card__content">
                                    <h2 class="proddk__price">$
                                        <%= room.total %>
                                    </h2>
                                    <p class="proddk__description">
                                        <%= room.stock %>
                                    </p>
                                </div>
                                <div class="card__actions">
                                    <a href="/edit-room/<%= room._id %>?edit=true" class="btn">Edit</a>
                                    <form action="/delete-room" method="POST">
                                        <input type="hidden" value="<%= room._id %>" name="roomId">
                                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                        <button class="btn" type="submit">Delete</button>
                                    </form>

                                </div>
                            </article>
                            <% } %>
                    </div>
                    <% } else { %>
                        <h1>No Products Found!</h1>
                        <% } %>
            </main>
            <%- include('../includes/end.ejs') %>