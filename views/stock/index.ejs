<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

            <main class="container mt-3">
                <% if (sto.length> 0) { %>
                    <div class="container mt-5 px-2">
                        <div class="table-responsive">
                            <table class="table table-responsive ">
                                <thead>
                                    <tr class="bg-light">

                                        <th scope="col" width="70%">
                                            <h2>قائمه العملاء</h2>
                                        </th>

                                        <th scope="col" class="text-end" width="20%">
                                            <div class="text-end text-center">
                                                <a href="/add-cusm">
                                                    <button type="button" class="btn btn-primary">إضافه عميل</button>
                                                </a>


                                            </div>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>
                                            <p>في هذه القائمه تستطيع معرفه تفاصيل العملاء والتعديل عليها</p>

                                        </td>
                                    </tr>

                                </tbody>

                        </div>
                    </div>
                    <div class="container mt-5 px-2">
                        <div class="container mt-3">

                        </div>
                        <div class="table-responsive">
                            <table class="table table-responsive table-borderless table-bordered">
                                <thead>
                                    <tr class="bg-light">
                                        <th scope="col" width="5%"><input class="form-check-input" type="checkbox"></th>
                                        <th scope="col" width="5%">#</th>

                                        <th scope="col" width="20%">الاسم</th>
                                        <th scope="col" width="7%">الكمية</th>
                                        <th scope="col" width="10%">الماركة</th>
                                        <th scope="col" width="5%">الغرف</th>
                                        <th scope="col" width="14%">الهاتف</th>
                                        <th scope="col" width="5%">الدين</th>
                                        <th scope="col" class="text-end" width="20%"><span> </span></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% for (var i=0;i<sto.length;i++) { %>
                                        <tr>
                                            <th scope="row"><input class="form-check-input" type="checkbox"></th>
                                            <td>
                                                <%= i+1 %>
                                            </td>
                                            <td>
                                                <%= sto[i].name %>
                                            </td>
                                            <td>
                                                <%= sto[i].total %>
                                            </td>
                                            <td>
                                                <%= sto[i].mark %>
                                            </td>
                                            <td>
                                                <%= sto[i].room %>
                                            </td>
                                            <td>
                                                <%= sto[i].phone %>
                                            </td>
                                            <td class="text-danger ">
                                                <%= sto[i].den %>
                                            </td>

                                            <td class="text-end text-center">
                                                <!-- <a href="/edit-cusm/<%= sto[i]._id %>?edit=true" type="button"
                                                    class="btn btn-primary">تعديل</button>
                                                </a> -->
                                                <a href="/ops/<%= sto[i]._id %>" type="button"
                                                    class="btn btn-primary">تخزين</button>
                                                </a>
                                                <form action="/delete-cusm" method="POST">
                                                    <input type="hidden" value="<%= sto[i]._id %>" name="productId">
                                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                                    <button type="submit" class="btn btn-danger">سحب</button>
                                                    <!-- <button type="submit" class="btn btn-danger">حذف</button> -->
                                                </form>
                                            </td>
                                        </tr>
                                        <% } %>
                                </tbody>
                            </table>
                        </div>
                        <!-- <div class="mb-2 d-flex justify-content-between align-items-center">
    
                <div class="position-relative">
                    <span class="position-absolute search"><i class="fa fa-search"></i></span>
                    <input class="form-control w-100" placeholder="Search by order#, name...">
                </div>
    
                <div class="px-2">
    
                    <span>Filters <i class="fa fa-angle-down"></i></span>
                    <i class="fa fa-ellipsis-h ms-3"></i>
                </div>
    
            </div> -->
                    </div>

                    <% } else { %>
                        <h1>No Products Found!</h1>
                        <% } %>
            </main>
            <%- include('../includes/end.ejs') %>